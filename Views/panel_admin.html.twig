{% extends "index.html.twig" %}

{% block section %}
{{message}}
<h2>Projets à valider</h2>
<table class="table table-hover table-sm">
		<thead>
			<tr>
				<th>Id</th>
				<th>Titre</th>
				<th>Description</th>
				<th>Démo</th>
				<th>Source</th>
			</tr>
		</thead>
		<tbody>
			{% for projet in projets %}
					<tr>
						<td>{{projet.idprojet}}</td>
						<td>{{projet.titre}}</td>
						<td>{{projet.description}}</td>
						<td>{{projet.demo}}</td>
						<td>{{projet.source}}</td>
						<td>
								<a href="?action=infoprojet&idprojet={{projet.idprojet}}" name="idprojet" value="{{projet.idprojet}}" class="btn btn-primary">
									Voir plus
								</a>
                                <a href="?action=validerprojet&idprojet={{projet.idprojet}}" name="idprojet" value="{{projet.idprojet}}" class="btn btn-primary">
									Valider le projet
								</a>
						</td>
					</tr>
			{% endfor %}
		</tbody>
	</table>

<h2>Ajouter...</h2>

