{% extends "index.html.twig" %}

{% block section %}

	<form method="post" action="index.php" class="well">
		<fieldset>
			<legend>Veuillez vous identifiez</legend>
			<div class="form-group row">
				<label for="email" class="col-sm-2 col-form-label col-form-label-sm">Email</label>
				<div class="col-sm-6">
					<input type="text" id="email" class="form-control form-control-sm" name="email" required placeholder="">
				</div>
			</div>
			<div class="form-group row">
				<label for="mdp" class="col-sm-2 col-form-label col-form-label-sm">Mot de passe</label>
				<div class="col-sm-6">
					<input type="password" id="mdp" class="form-control form-control-sm" name="mdp" required placeholder="">
				</div>
			</div>
			<input class="btn btn-dark mt-3" type="submit" name="connexion" value="Se connecter">
		</fieldset>
	</form>

	<p>Pas encore de compte ?
		<a href="?action=subscribe">S'inscrire</a>
	</p>
{% endblock %}
